<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-center">Edit products</h2>
            <form action="/admin/edit-product/{{product._id}}" method="post"enctype="multipart/form-data">
                
                    <label>Name</label>
                    <input type="text" class="form-control" name="Name" value="{{product.Name}}">

                
                    <label >Category</label>
                    <input type="text" class="form-control" name="Category" value="{{product.Category}}" >

                
                    <label >Price</label>
                    <input type="text" class="form-control" name="Price" value="{{product.Price}}" >

                
                    <label >Description</label>
                    <input type="text" class="form-control" name="Description" value="{{product.Description}}">

                
                    <label >Image</label>
                    <img src="/product-images/{{product._id}}.jpg" alt="" width="100px" height="100px" id="imgview" class="p-2">
                    <input type="file" class="form-control" name="image" value="/product-images/{{product._id}}.jpg" onchange="viewImage(event)" >

                <button type="submit" class="btn btn-success mt-4">Submit</button>
            </form>
        </div>
    </div>
</div>

<script>
    function viewImage(event){
        document.getElementById('imgview').src=URL.createObjectURL(event.target.files[0])
    }
</script>
 