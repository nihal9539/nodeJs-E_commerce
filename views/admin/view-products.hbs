<section>
    <div class="container">
        <div class="row m-4">
            <a href="/admin/add-product" class="btn btn-success ml-auto">add product</a>
        </div>
        <table class="table table-striped mt-5" id="productsTable">
            <thead>
                <tr>
                    {{!-- <th scope="col">Number</th> --}}
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">price</th>
                    <th scope="col">Description</th>
                    <th scope="col">image</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>

                {{#each products}}
                <tr>
                    {{!-- <th scope="row">1</th> --}}
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td>{{this.Price}}</td>
                    <td>{{this.Description}}</td>
                    <td><img width="50px" height="50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
                    <td>
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                            onclick="return confirm('Are you want to delete {{this.Name}}?')">Delete</a>

                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>
<script>
    $(function () {
        $('#productsTable').DataTable();
    });
</script>